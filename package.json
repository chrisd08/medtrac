{
  "name": "medtrac",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "ci:test": "lerna run ci:test",
    "ci:deploy:server": "lerna run ci:deploy --scope=@medtrac/server",
    "ci:deploy:web": "lerna run ci:deploy --scope=@medtrac/web",
    "build:deps": "lerna run build --scope=@medtrac/common",
    "heroku-prebuild": "node scripts/remove-workspaces.js",
    "heroku-postbuild": "yarn gen && node scripts/build-workspaces.js",
    "lint": "eslint --max-warnings 0 --fix -c .eslintrc.js --ignore-path .gitignore --cache --ext .ts,.tsx .",
    "gen": "lerna run gen"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^3.0.9",
    "jest-junit": "^6.4.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.1.5",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc -p packages/server/tsconfig.json --noEmit && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "yarn run --silent lint",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
